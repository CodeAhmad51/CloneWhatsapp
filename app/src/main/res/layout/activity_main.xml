<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_recycler"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/whatsapp_home_border"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3B554B">

            <TextView
                android:id="@+id/whatsapp_text_view"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="Whatsapp"
                android:textColor="#BDBABA"
                android:textSize="28dp"
                android:textStyle="italic"

                />

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/options_menu_button"
                android:src="@drawable/ic_baseline_search_24" />

            <ImageView
                android:id="@+id/options_menu_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/option_bar_main_home" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#3B554B"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            >
        <ImageView
            android:id="@+id/camara"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/camara_whatsap"
            />

            <TextView
                android:id="@+id/chats"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/camara"
                android:text="CHATS"
                android:textColor="#BDBABA"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/chats"
                android:text="STATUS"
                android:textColor="#BDBABA"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/calls"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/status"
                android:text="CALLS"
                android:textColor="#BDBABA"
                android:textSize="20dp"
                android:textStyle="italic" />
        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>